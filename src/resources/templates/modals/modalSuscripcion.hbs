<div class="modal-dialog modal-dialog-centered modal-lg modal-error">
    <div class="modal-content modal modal-error-content">
        {{#each estadoDeSuscripciones}}
            <div class="modal-header">
                {{#if this.estado}}
                    <h5 class="modal-title">Â¡Excelente!</h5>
                {{else}}
                    <h5 class="modal-title">Algo salio mal..</h5>
                {{/if}}
            </div>
            <div class="modal-body">
                <p>{{this.mensaje}}</p>
            </div>
        {{/each}}
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="closeModalButton">Cerrar
            </button>
        </div>
    </div>
</div>


<script>
    document.getElementById('closeModalButton').addEventListener('click', function () {
        var modal = bootstrap.Modal.getInstance(document.getElementById('modals-alert'));
        modal.hide();
    });
</script>